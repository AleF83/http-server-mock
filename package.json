{
  "name": "http-server-mock",
  "version": "0.1.0",
  "repository": "git@github.com:AleF83/http-server-mock.git",
  "author": "AleF83 <AlexanderFux83@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "private": true,
  "workspaces": [
    "service",
    "packages/*",
    "e2e"
  ],
  "scripts": {
    "prepare": "lerna run prepare",
    "docker:build": "docker buildx build -t alef83/http-server-mock -f service/Development.Dockerfile .",
    "docker:run": "docker run --rm -d -p 8080:8080 -p 10000-10010:10000-10010 --name server-mock alef83/http-server-mock",
    "docker:stop": "docker stop server-mock",
    "test:unit": "lerna run test:unit",
    "test:integration": "lerna run test:integration",
    "test:e2e": "yarn docker:build && yarn docker:run && lerna run test:e2e && yarn docker:stop || yarn docker:stop",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write **/*.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.17.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "20.1.0",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.6"
  }
}
